<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:layout_centerInParent="true"
    android:background="@drawable/round_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Why don't you talk?"
        android:padding="5dp"
        android:id="@+id/txt_news_header"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This might interest you..."
        android:id="@+id/txt_news_direction"
        android:padding="5dp"
        android:textColor="#000000"
        android:layout_below="@+id/txt_news_header"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:padding="5dp"
        android:id="@+id/layout_news_buttons"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic|bold"
            android:textColor="#000000"
            android:text="Why am I seeing this?"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="It seems you are with someone,\nbut your eyes are on this.\nYou could talk to the person in front of you."
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/ok"
            android:id="@+id/btn_news_ok" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_news_direction"
        android:layout_above="@id/layout_news_buttons"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="@drawable/round_background"
        android:id="@+id/layout_news_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Header"
            android:textSize="26dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:id="@+id/txt_news_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_news_more"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Read more..."
            android:textColor="#000000"
            android:textSize="12dp"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Content"
            android:padding="5dp"
            android:textSize="14dp"
            android:textColor="#000000"
            android:id="@+id/txt_news_content"
            android:layout_above="@id/txt_news_more"
            android:layout_below="@id/txt_news_title"  />

    </RelativeLayout>

</RelativeLayout>